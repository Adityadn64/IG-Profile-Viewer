from facebook_scraper import get_posts

def download_facebook_posts(page_name):
    try:
        # Mendapatkan postingan dari halaman Facebook
        for post in get_posts(page_name, pages=5):  # Mengambil 5 halaman postingan
            print("Post URL:", post['post_url'])
            print("Text:", post['text'])
            print("Likes:", post['likes'])
            print("Comments:", post['comments'])
            print("Timestamp:", post['time'])

            # Anda dapat menambahkan logika untuk mendownload gambar atau video jika diperlukan

            print("\n------\n")

    except Exception as e:
        print(f"Terjadi kesalahan: {e}")

# Ganti dengan nama halaman Facebook yang ingin Anda download
target_page_name = input("Masukkan Nama Halaman Facebook:")
download_facebook_posts(target_page_name)
